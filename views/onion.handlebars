<div class="jumbotron jumbotron-fluid onion">
    <h1>The Onion Article Scraper</h1>
</div>
<div class="container">
    {{!-- onion scrape --}}
    <div class="sort">
        {{!-- <button type="button" class="btn btn-info" id="by-date">By Date</button>
        <button type="button" class="btn btn-info" id="by-author">
            By Author
        </button> --}}
        <button type="button" class="btn btn-info" id="scrape-onion">
            Scrape New Onion Articles
        </button>
    </div>

    <div class="grid-container">
        {{#each onionPost}}
        <div class="card">
            <div class="card-body">
                <div class="text">
                    <h4 class="card-title"><a href="{{link}}">{{title}}</a></h4>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>